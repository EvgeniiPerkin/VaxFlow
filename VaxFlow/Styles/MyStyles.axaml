<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="ToggleButton TextBlock.on">
    <Setter Property="IsVisible" Value="False"/>
  </Style>
  <Style Selector="ToggleButton:checked TextBlock.on">
    <Setter Property="IsVisible" Value="True"/>
  </Style>
  <Style Selector="ToggleButton TextBlock.off">
    <Setter Property="IsVisible" Value="True"/>
  </Style>
  <Style Selector="ToggleButton:checked TextBlock.off">
    <Setter Property="IsVisible" Value="False"/>
  </Style>
  <Style Selector="Border.b1">
    <Setter Property="Margin" Value="6"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="BorderBrush" Value="#BCFD4C"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="ClipToBounds" Value="True"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="Background" Value="#6E6E6E"/>
  </Style>
  <Style Selector="Border.b2">
    <Setter Property="Margin" Value="0 3 0 3"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="BorderBrush" Value="#BCFD4C"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="ClipToBounds" Value="True"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
  </Style>
  <Style Selector="TextBlock.h1">
    <Setter Property="FontSize" Value="24"/>
    <Setter Property="Padding" Value="3"/>
  </Style>
  <Style Selector="TextBlock.h2">
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="Padding" Value="3"/>
  </Style>
  <Style Selector="TextBlock.h3">
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="Padding" Value="3"/>
  </Style>
  <Style Selector="TextBlock.output">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Padding" Value="3"/>
    <Setter Property="Foreground" Value="LightGreen"/>
  </Style>
  <Style Selector="Separator">
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Padding" Value="0"/>
  </Style>
  <Style Selector="ListBox.RadioButtonListBox">
    <Setter Property="Background" Value="#6E6E6E"/>
  </Style>
  <Style Selector="ListBox.RadioButtonListBox ListBoxItem">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <RadioButton
            Content="{TemplateBinding ContentPresenter.Content}"
            VerticalAlignment="Center"
            IsChecked="{Binding Path=IsSelected,RelativeSource={RelativeSource TemplatedParent},Mode=TwoWay}"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
