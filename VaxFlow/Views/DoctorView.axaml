<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:VaxFlow.ViewModels"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="VaxFlow.DoctorView"
  x:CompileBindings="False">
  <Grid
    RowDefinitions="auto,*,auto,auto"
    ColumnDefinitions="0.5*,*">
    <TextBlock
      Grid.Row="0"
      Grid.Column="0"
      Grid.ColumnSpan="2"
      Classes="h1"
      Text="Врачи"
        />
    <ListBox
      Grid.Row="1"
      Grid.Column="0"
      MaxHeight="900"
      ItemsSource="{Binding ListService.Doctors}"
      SelectedItem="{Binding SelectedDoctor, Mode=TwoWay}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding LastName}"/>
            <TextBlock Text="{Binding FirstName}"/>
            <TextBlock Text="{Binding Patronymic}"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <Grid
      Grid.Row="2"
      Grid.Column="0"
      ColumnDefinitions="*,*">
      <Button
        Grid.Column="0"
        HorizontalAlignment="Left"
        Command="{Binding AddDoctorAsync}">Добавить</Button>
      <Button
        Grid.Column="1"
        HorizontalAlignment="Right"
        Command="{Binding RemoveDoctorAsync}"
        CommandParameter="{Binding SelectedDoctor}">Удалить</Button>
    </Grid>
    <Grid
      Grid.Row="1"
      Grid.Column="1"
      RowDefinitions="auto,auto,auto,auto,auto"
      ColumnDefinitions="*,*,*">
      <TextBlock
        Grid.Row="0"
        Grid.Column="0"
        Grid.ColumnSpan="3"
        Classes="danger"
        Text="Поля с символом '*' обязательные!"/>
      <StackPanel
        Grid.Row="1"
        Grid.Column="0">
        <TextBlock Classes="h3" Text="Фамилия*"></TextBlock>
        <TextBox
          Watermark="Гусейнова"
          Text="{Binding SelectedDoctor.LastName}"/>
      </StackPanel>
      <StackPanel
        Grid.Row="1"
        Grid.Column="1">
        <TextBlock Classes="h3" Text="Имя*"></TextBlock>
        <TextBox
          Watermark="Зарема"
          Text="{Binding SelectedDoctor.FirstName}"/>
      </StackPanel>
      <StackPanel
        Grid.Row="1"
        Grid.Column="2">
        <TextBlock Classes="h3" Text="Отчество"></TextBlock>
        <TextBox
          Watermark="Юсуф"
          Text="{Binding SelectedDoctor.Patronymic}"/>
      </StackPanel>
      <StackPanel
        Grid.Row="2"
        Grid.Column="2">
        <TextBlock Classes="h3" Text="Префикс"></TextBlock>
        <TextBox
          Watermark="кызы"
          Text="{Binding SelectedDoctor.NameSuffix}"/>
      </StackPanel>
      <CheckBox
        Grid.Row="3"
        Grid.Column="0"
        Grid.ColumnSpan="3"
        IsChecked="{Binding SelectedDoctor.IsDismissed}"
        Content="Уволен (не будет отображаться в списках)"/>
      <Button
        Grid.Row="4"
        Grid.Column="0"
        Grid.ColumnSpan="3"
        HorizontalAlignment="Center"
        Command="{Binding UpdateDoctorAsync}"
        CommandParameter="{Binding SelectedDoctor}">Сохранить</Button>
    </Grid>
    <TextBlock
      Grid.Row="3"
      Grid.Column="0"
      Grid.ColumnSpan="2"
      Classes="output"
      Text="{Binding Output}"/>
  </Grid>
</UserControl>
